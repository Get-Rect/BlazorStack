<div class="nav-menu primary">
    <NavLink class="primary" href="" Match="NavLinkMatch.All">@(isNavMenuCollapsed ? "" : "Home ")<i class="fa-solid fa-house"></i></NavLink>
    <NavLink class="primary" href="/users" Match="NavLinkMatch.All">@(isNavMenuCollapsed ? "" : "Users ")<i class="fa-solid fa-users"></i></NavLink>
</div>

<button @onclick="ToggleNavMenu"><i class="fa-solid fa-arrow-@(isNavMenuCollapsed ? "right" : "left")"></i></button>

@code {
    [Parameter]
    public EventCallback OnCollapseMenu { get; set; }

    private bool isNavMenuCollapsed = false;


    private async Task ToggleNavMenu()
    {
        isNavMenuCollapsed = !isNavMenuCollapsed;
        await OnCollapseMenu.InvokeAsync();
    }
}
